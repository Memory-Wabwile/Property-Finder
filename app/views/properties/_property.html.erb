<div class="single-property" id="<%= dom_id property %>">
  <h1 class="m-3" >
    <%= property.name %>
  </h1>

  <p class="property-photo" >
    <% if property.photo.attached? %>
    <%= image_tag property.photo %>
  <% else %>
    No photo available
  <% end %>
</p>

  <p>
    <strong>Address:</strong>
    <%= property.address %>
  </p>

  <p>
    <strong>Price:</strong> $
    <%= property.price %>
  </p>

  <p>
    <strong>Rooms:</strong>
    <%= property.rooms %>
  </p>

  <p>
    <strong>Bathrooms:</strong>
    <%= property.bathrooms %>
  </p>

</div>
